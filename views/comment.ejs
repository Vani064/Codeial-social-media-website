<div class="card mb-4">
  <% if (locals.user && (locals.user.id == post.user.id || locals.user.id == comment.user.id)){ %>
    <small style="text-align: left;">
        <a class="delete-comment-button" href="/comment/destroy/<%=comment.id %>"><i id="delbut" class="bi bi-x-square"></i></a>
    </small>
    <% } %>
  <div class="card-body">        
<li id="comment-<%= comment._id %>">
    <p>
       <%= comment.content %>
       <br>
       <small><strong> Comment from </strong>
           <%= comment.user.name %>
      <!-- likes -->
        </small><br><small>
        <% if(locals.user){ %> 
           
         <a class="toggle-like-button" data-likes="<%= comment.likes.length %>" href="/likes/toggle/?id=<%=comment._id%>&type=Comment">
           <%= comment.likes.length %> 
           Likes</a>
         <%}else {%> 
           <%= comment.likes.length %> Likes
           <%} %>
       </small>
    </p>
   </li>
  </div></div>